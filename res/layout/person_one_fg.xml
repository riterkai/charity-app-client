<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebffcc"
    android:id="@+id/linear1"
   >
   <TextView 
       android:id="@+id/line_one"
       android:layout_width="match_parent"
       android:layout_height="1dp"
	    
       android:background="#d9d9d9"
       />
	<RelativeLayout 
	    android:id="@+id/person_info_rel"
	    android:layout_width="match_parent"
	    android:layout_height="120dp"
	    android:layout_below="@id/line_one"
	    android:layout_marginTop="10dp"
	    >
	    <ImageView 
	        android:id="@+id/person_head_img"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:scaleType="fitXY"
	        android:background="@drawable/ic_launcher"
	        />
	    <EditText 
	        android:id="@+id/person_name_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="#494949"
	        android:text="愛心之家"
	        android:layout_toRightOf="@id/person_head_img"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="15dp"
	        android:background="@null"
	        />
	    <EditText 
	        android:id="@+id/person_address_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="#494949"
	        android:text="愛心之家"
	        android:layout_toRightOf="@id/person_head_img"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:selectAllOnFocus="true"
	        android:background="@null"
	        />
	    <TextView 
	        android:id="@+id/tel_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:textSize="16sp"
	        android:textColor="#494949"
	        android:layout_toRightOf="@id/person_head_img"
	        android:layout_marginLeft="10dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="15dp"
	         android:text="Tel:"
	        />
	    <EditText 
	        android:id="@+id/person_tel_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="#494949"
	        android:text="150603255"
	        android:layout_toRightOf="@id/tel_text"
	        android:layout_marginLeft="10dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="15dp"
	        android:background="@null"
	        />

	    <ImageView
	        android:id="@+id/marker_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignLeft="@+id/person_edit_btn"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/person_edit_btn"
	        
	        android:layout_toRightOf="@id/person_address_text"
	        android:src="@drawable/marker" />

	    <Button
	        android:id="@+id/person_edit_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:text="編輯" />
	    
	</RelativeLayout>
	<TextView 
       android:id="@+id/line_two"
       android:layout_width="match_parent"
       android:layout_height="1dp"
	    android:layout_marginTop="10dp"
       android:background="#d9d9d9"
       android:layout_below="@id/person_info_rel"
       />
	<TextView 
       android:id="@+id/intro"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
       android:textColor="#494949"
       android:layout_below="@id/line_two"
       android:text="簡介:"
       android:textSize="18sp"
       />
	<EditText 
	    android:id="@+id/intro_edit"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="20dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/squa_edit"
	    android:layout_below="@id/intro"
	    android:text="中國人名解放軍"
	    android:gravity="top"
	    android:textSize="16sp"
	    android:textColor="#494949"
	    />
	

</RelativeLayout>
